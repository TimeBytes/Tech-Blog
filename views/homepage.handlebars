{{#each blogposts as |post|}}
  <div
    id="add-comment-btn"
    data-id="{{post.id}}"
    class="col-12 col-md-8 m-auto align-center mt-5 border border-black rounded-4"
  >
    <div class="d-flex justify-content-between bg-info m-0 p-2 rounded-4">
      <h2>{{post.title}}</h2>
      <p>{{format_date post.createdAt}}</p>
    </div>
  </div>
{{/each}}