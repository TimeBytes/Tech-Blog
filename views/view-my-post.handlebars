<div
  class="col-12 col-md-8 m-auto align-center mt-5 border border-black rounded-4"
>
  <h2 class="text-center bg-info m-0 p-2 rounded-top-4">{{blogpost.title}}</h2>
  <p class="text-center p-3 m-0">{{blogpost.content}}</p>
  <div class="d-flex justify-content-center">
    <a
      href="/update-post/{{blogpost.id}}"
      class="btn btn-primary m-2"
      type="submit"
    >Edit</a>
    <button
      id="delete-post-btn"
      class="btn btn-danger m-2"
      data-id="{{blogpost.id}}"
      type="submit"
    >Delete</button>
  </div>
</div>

<script src="/js/view-my-post.js"></script>